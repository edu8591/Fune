<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/dknqzlcaq/image/upload/v1726012167/Fune_lpcqim.png", style:"height: 60px; width: 55px; margin-left: 5px" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="navbar-medium">
    <span><%= link_to "Places to browse  |", ships_path %></span>
    <span><%= link_to "Best places ", "/ships?country=Argentina" %></span>
  </div>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <!--<li class="nav-item">
          <%= link_to "Messages", "#", class: "nav-link" %>
        </li>-->
        <li class="nav-item dropdown">
          <%= cl_image_tag current_user.avatar.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% if current_user.owner%>
              <%= link_to "Add a ship", new_ship_path, class: "dropdown-item" %>

            <% end%>
              <%= link_to "Reservations",reservations_path, class: "dropdown-item" %>
              <hr>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
