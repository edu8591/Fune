<div class="d-flex justify-content-center">
  <div class="col-4">
    <%= simple_form_for @ship, :class => "form-group" do |f| %>
      <%= f.input :max_people, :class => "form-control"%>
      <%= f.input :price, :class => "form-control"%>
      <%= f.input :ship_type, :class => "form-control", collection: Ship::TYPES%>
      <%= f.input :latitude, :class => "form-control"%>
      <%= f.input :longitude, :class => "form-control"%>
      <%= f.input :name, :class => "form-control"%>
      <%= f.input :description, :class => "form-control"%>
      <%= f.input :images, :input_html => { :multiple => true } %>
      <%= f.submit "Submit list", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
